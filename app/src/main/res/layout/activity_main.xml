<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1116dp"
        android:layout_height="816dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sky" />

    <TextView
        android:id="@+id/txtEnemyMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="Enemy Mon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonNextTurn" />

    <TextView
        android:id="@+id/txtEnemyHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Enemy HP"
        app:layout_constraintEnd_toEndOf="@+id/txtEnemyMon"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/txtEnemyMon"
        app:layout_constraintTop_toBottomOf="@+id/txtEnemyMon" />

    <TextView
        android:id="@+id/txtEnemyMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Enemy MP"
        app:layout_constraintEnd_toEndOf="@+id/txtEnemyHP"
        app:layout_constraintStart_toStartOf="@+id/txtEnemyHP"
        app:layout_constraintTop_toBottomOf="@+id/txtEnemyHP" />

    <TextView
        android:id="@+id/txtMyMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="196dp"
        android:text="My Mon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMonHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon HP"
        app:layout_constraintEnd_toEndOf="@+id/txtMyMon"
        app:layout_constraintStart_toStartOf="@+id/txtMyMon"
        app:layout_constraintTop_toTopOf="@+id/txtEnemyHP" />

    <TextView
        android:id="@+id/txtMonMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Mon MP"
        app:layout_constraintEnd_toEndOf="@+id/txtMonHP"
        app:layout_constraintStart_toStartOf="@+id/txtMonHP"
        app:layout_constraintTop_toBottomOf="@+id/txtMonHP" />

    <Button
        android:id="@+id/buttonNextTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIRST TURN"
        app:layout_constraintEnd_toStartOf="@+id/txtEnemyMon"
        app:layout_constraintStart_toEndOf="@+id/txtMyMon"
        app:layout_constraintTop_toTopOf="@+id/txtMyMon" />

    <TextView
        android:id="@+id/txtMonDmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Salamence's Damage"
        app:layout_constraintEnd_toEndOf="@+id/txtMyMon"
        app:layout_constraintStart_toStartOf="@+id/txtMyMon"
        app:layout_constraintTop_toBottomOf="@+id/txtMyMon" />

    <TextView
        android:id="@+id/txtEnemyDmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garchomp's Damage"
        app:layout_constraintEnd_toEndOf="@+id/txtEnemyMon"
        app:layout_constraintStart_toStartOf="@+id/txtEnemyMon"
        app:layout_constraintTop_toTopOf="@+id/txtMonDmg" />

    <TextView
        android:id="@+id/txtBattleHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:text="Battle History"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285"
        app:srcCompat="@drawable/salamence" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285"
        app:srcCompat="@drawable/garchomp" />

</androidx.constraintlayout.widget.ConstraintLayout>